<h2>{{post.title}}</h2>
<h3>{{post.author}}</h3>
<br>
<p class="story">
{{post.body}}
</p>
<br>
<img src="{{post.image}}" alt="{{post.category}}" /><br>
<hr>
<br>
<button {{action 'delete' post}}>Delete</button>
{{update-post post=post update="update"}}


<h2>Comments:</h2>
{{add-comment addComment="addComment"}}

{{#each post.comments as |comment|}}
  <div class="panel panel-primary">
    <div class="panel-body">{{comment.content}}</div>
  </div>
{{/each}}
